<h1>Posts</h1>
<div class="posts">
  <% @posts.each do |post| %>
    <div class="post">
      <h2><%= post.title %></h2>
      <p><%= post.content %></p>
      <p><strong>Category:</strong> <%= post.category %></p>
      <p><strong>Author:</strong> <%= post.user.name %></p>
      <p><strong>Created At:</strong> <%= post.created_at.to_formatted_s(:long) %></p>
    </div>
  <% end %>
</div>
