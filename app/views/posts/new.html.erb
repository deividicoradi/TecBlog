<h1 class="form-title">Novo Post</h1>

<%= form_with(model: @post, url: posts_path, method: :post, class: "post-form") do |form| %>
  <div class="form-field">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-input" %>
  </div>

  <div class="form-field">
    <%= form.label :content, class: "form-label" %>
    <%= form.text_area :content, class: "form-textarea" %>
  </div>

  <div class="form-field">
    <%= form.label :category, class: "form-label" %>
    <%= form.text_field :category, class: "form-input" %>
  </div>

  <div class="form-actions">
    <%= form.submit "Criar Post", class: "form-submit" %>
  </div>
<% end %>
